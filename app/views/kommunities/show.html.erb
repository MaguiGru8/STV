<% content_for :page_title do %>
  <%= @kommunity.name %>
<% end %>

<section id="kommunity-<%= @kommunity.id %>" class="py-4">
  <!-- Header Card -->
  <div class="card shadow-sm border-0 rounded-lg mb-4">
    <div class="row g-0 p-4">
      <!-- Columna del Logo -->
      <div class="col-md-3 text-center border-end">
        <% if @kommunity.logo_image.attached? %>
          <div class="kommunity-logo-container mb-3">
            <img class="img-fluid rounded-circle shadow-sm"
                 alt="<%= @kommunity.name %> Logo"
                 src="<%= url_for(@kommunity.logo_image)%>"
                 style="max-width: 200px;">
          </div>
        <% end %>

        <h3 class="text-primary fw-bold mb-3">
          <%= @kommunity.name %>
        </h3>

        <div class="d-flex justify-content-center gap-2 flex-wrap">
          <span class="badge bg-info rounded-pill">
            <i class="fas fa-users me-1"></i>
            <%= @kommunity.member_count %> inscriptos
          </span>

          <% if allowed_view?(:kommunities, :edit) %>
            <%= link_to edit_kommunity_path(@kommunity),
                        class: 'badge bg-primary rounded-pill text-decoration-none' do %>
              <i class="fas fa-edit me-1"></i> Editar
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- Columna de Descripción -->
      <div class="col-md-9" id="about-community">
        <div class="px-4 py-2">
          <h4 class="text-secondary mb-3">Sobre este edición del seminario</h4>
          <div class="text-muted">
            <%= @kommunity.about.html_safe %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Botones de Acción -->
  <% if allowed_view?(:events, :create) %>
    <div class="card shadow-sm border-0 rounded-lg p-3 mb-4">
      <div class="d-flex gap-3">
        <%= link_to new_event_path, class: 'btn btn-outline-primary', target: "_blank" do %>
          <i class="fas fa-plus-circle me-2"></i>Crear evento
        <% end %>

        <%= link_to new_data_form_path, class: 'btn btn-outline-success', target: "_blank" do %>
          <i class="fas fa-file-alt me-2"></i>Crear formulario
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Panel de Eventos -->
  <% if user_signed_in? && current_user.organizer?(@kommunity.id) %>
    <div class="row g-4">
      <!-- Acordeón de Eventos -->
      <div class="accordion col-md-8" id="kommunity-events">
        <!-- Próximos seminarios -->
        <div class="card shadow-sm mb-3">
          <div class="card-header bg-primary text-white" id="headingOne">
            <h5 class="mb-0">
              <button class="btn btn-link text-white text-decoration-none" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                <i class="fas fa-calendar-alt me-2"></i> Próximos seminarios
              </button>
            </h5>
          </div>
          <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-bs-parent="#kommunity-events">
            <div class="card-body">
              <% if @events.any? { |ev| ev.start_time >= Time.now.beginning_of_day && ev.status?([NameValues::EventStatusType::ANNOUNCED, NameValues::EventStatusType::OPEN]) } %>
                <ul class="list-group">
                  <% @events.select { |ev| ev.start_time >= Time.now.beginning_of_day && ev.status?([NameValues::EventStatusType::ANNOUNCED, NameValues::EventStatusType::OPEN]) }.each do |event| %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                      <%= link_to event.name.titleize, event_path(id: event), target: "_blank", class: "text-decoration-none text-dark fw-bold" %>
                      <span class="badge bg-success"><%= render 'events/event_time_display', event: event %></span>
                    </li>
                  <% end %>
                </ul>
              <% else %>
                <p class="text-muted">No hay próximos seminarios.</p>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Seminarios en borrador -->
        <div class="card shadow-sm mb-3">
          <div class="card-header bg-warning text-dark" id="headingTwo">
            <h5 class="mb-0">
              <button class="btn btn-link text-dark text-decoration-none" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                <i class="fas fa-edit me-2"></i> Seminarios en borrador
              </button>
            </h5>
          </div>
          <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-bs-parent="#kommunity-events">
            <div class="card-body">
              <% if @events.any? { |ev| ev.status?([NameValues::EventStatusType::DRAFT]) } %>
                <ul class="list-group">
                  <% @events.select { |ev| ev.status?([NameValues::EventStatusType::DRAFT]) }.each do |event| %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                      <%= link_to event.name.titleize, event_path(id: event), target: "_blank", class: "text-decoration-none text-secondary fw-bold" %>
                      <span class="badge bg-secondary"><%= render 'events/event_time_display', event: event %></span>
                    </li>
                  <% end %>
                </ul>
              <% else %>
                <p class="text-muted">No hay seminarios en borrador.</p>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Seminarios pasados -->
        <div class="card shadow-sm mb-3">
          <div class="card-header bg-secondary text-white" id="headingThree">
            <h5 class="mb-0">
              <button class="btn btn-link text-white text-decoration-none" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                <i class="fas fa-history me-2"></i> Seminarios pasados
              </button>
            </h5>
          </div>
          <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-bs-parent="#kommunity-events">
            <div class="card-body">
              <% if @events.any? { |ev| ev.start_time < Time.now.beginning_of_day && !ev.status?([NameValues::EventStatusType::DRAFT]) } %>
                <ul class="list-group">
                  <% @events.select { |ev| ev.start_time < Time.now.beginning_of_day && !ev.status?([NameValues::EventStatusType::DRAFT]) }.each do |event| %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                      <%= link_to event.name.titleize, event_path(id: event), target: "_blank", class: "text-decoration-none text-muted fw-bold" %>
                      <span class="badge bg-light text-dark"><%= render 'events/event_time_display', event: event %></span>
                    </li>
                  <% end %>
                </ul>
              <% else %>
                <p class="text-muted">No hay seminarios pasados.</p>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Panel de Formularios -->
      <div class="col-md-4">
        <div class="card shadow-sm border-0">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i>Formularios</h5>
          </div>
          <div class="list-group list-group-flush">
            <% @kommunity.data_forms.order('created_at desc').each do |df| %>
              <%= link_to df.name,
                          edit_data_form_path(@kommunity, df),
                          class: 'list-group-item list-group-item-action' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Eventos Próximos -->
  <% if !@upcoming_events.empty? %>
    <div class="mt-5">
      <h3 class="text-primary mb-4 border-bottom pb-2">
        <i class="fas fa-calendar-check me-2"></i>Upcoming Events
      </h3>
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% @upcoming_events.each do |event| %>
          <div class="col">
            <%= render 'events/event_mini_card', event: event %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Eventos Pasados -->
  <% if !@recent_past_events.empty? %>
    <div class="mt-5">
      <h3 class="text-secondary mb-4 border-bottom pb-2">
        <i class="fas fa-history me-2"></i>Recent Past Events
      </h3>
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% @recent_past_events.each do |event| %>
          <div class="col">
            <%= render 'events/event_mini_card', event: event %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</section>